<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd ">

	<bean id="dbSchemaInitialiser" class="org.otherobjects.cms.bootstrap.DbSchemaInitialiser">
		<property name="sessionFactoryBean" ref="&amp;sessionFactory"></property>
	</bean>
	
	<bean  id="jackrabbitInitialiser" class="org.otherobjects.cms.bootstrap.JackrabbitInitialiser">
		<property name="jcrSessionFactory" ref="jcrSessionFactory" />
		<property name="nodeTypesConfig" value="classpath:otherobjects.resources/config/node-types.cnd" />
	</bean>
	
	<bean id="ooAdminPassword" class="java.lang.String">
		<constructor-arg index="0" value="${otherobjects.default.admin.password}" />
	</bean>
	
	<bean id="ooAdminUserCreator" class="org.otherobjects.cms.bootstrap.OtherObjectsAdminUserCreator">
		<property name="userDao" ref="userDao"></property>
		<property name="roleDao" ref="roleDao"></property>
		<property name="passwordEncoder" ref="passwordEncoder"></property>
		<property name="saltSource" ref="saltSource"></property>
		<property name="defaultAdminPassword" >
			<bean factory-bean="ooAdminPassword" factory-method="toCharArray" />
		</property>
	</bean>
	
	<bean id="jackrabbitPopulater" class="org.otherobjects.cms.bootstrap.JackrabbitPopulater">
		<property name="bootstrapScript" value="classpath:otherobjects.resources/bootstrap-data/setup.script" />
		<property name="universalJcrDao" ref="universalJcrDao" />
	</bean>
	
	<bean id="ooBootstrapper" class="org.otherobjects.cms.bootstrap.OoBootstrapper">
		<property name="dbSchemaInitialiser" ref="dbSchemaInitialiser" />
		<property name="jackrabbitInitialiser" ref="jackrabbitInitialiser" />
		<property name="otherObjectsAdminUserCreator" ref="ooAdminUserCreator" />
		<property name="jackrabbitPopulater" ref="jackrabbitPopulater" />
		<property name="userDao" ref="userDao" />
	</bean>
</beans>