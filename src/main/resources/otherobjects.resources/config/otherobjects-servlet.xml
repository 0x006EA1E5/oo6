<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<!-- 
		Automatically detect controllers in the specified package(s) annotated with @Controller.
	-->
	<bean id="handlerMappingTemplate" abstract="true" >
		<property name="interceptors"  >
			<list>
				<ref bean="localeChangeInterceptor"/>
				<bean class="org.otherobjects.cms.controllers.interceptors.ModelModifierInterceptor" />
			</list>
		</property>
	</bean>
	<bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping" parent="handlerMappingTemplate" />
	<bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping" parent="handlerMappingTemplate" />
	<bean class="org.springframework.web.servlet.mvc.multiaction.InternalPathMethodNameResolver" />
	<!-- apparently in spring 2.5.3 ControllerClassNameHandlerMapping auto-detects @Controller annotated classes  -->
	<context:component-scan base-package="org.otherobjects.cms.controllers" />
	<context:component-scan base-package="org.otherobjects.cms.util" />

	<!-- 
		Site controller
		TODO This should be a separate servlet?
	
	<bean name="ssiteController" class="org.otherobjects.cms.controllers.SiteController">
		<property name="handlers">
			<map>
				<entry key="*" value-ref="pageHandler" />
			</map>
		</property>
	</bean>
	-->
	
	<bean id="localeChangeInterceptor" class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
		<property name="paramName" value="locale" />
	</bean>

	<bean name="pageHandler" class="org.otherobjects.cms.controllers.handlers.PageHandler" />

	<bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- TODO Extract max-upload size into a property -->
		<property name="maxUploadSize" value="10000000" />
	</bean>

	<bean id="beanNameViewResolver" class="org.springframework.web.servlet.view.BeanNameViewResolver">
		<property name="order">
			<value>1</value>
		</property>
	</bean>

	<bean id="jsonView" class="org.otherobjects.cms.views.JsonView">
		<property name="messageSource" ref="messageSource" />
	</bean>

	<bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
		<property name="defaultLocale">
			<value>en_GB</value>
		</property>
		<property name="cookieName">
			<value>ooWorkbenchLocale</value>
		</property>
		<property name="cookieMaxAge">
			<value>1000</value>
		</property>
	</bean>

	<bean name="startupMessage" class="org.otherobjects.cms.util.StartupMessage"></bean>

</beans>