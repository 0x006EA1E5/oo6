<?xml version="1.0" encoding="UTF-8"?>

<configuration>
	<consolePlugin />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%-5level [%logger{35}] %msg %n</Pattern>
		</layout>
	</appender>
	<root>
		<level value="WARN" />
		<appender-ref ref="STDOUT" />
	</root>
	<!--  Show startup times -->
	<logger name="org.springframework.web.context.ContextLoader">
		<level value="INFO" />
	</logger>
	<logger name="org.springframework.web.servlet.DispatcherServlet">
		<level value="INFO" />
	</logger>
	<!--  Turn off annoying and obvious warning -->
	<logger name="org.springframework.web.servlet.view.velocity.VelocityViewResolver">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.velocity">
		<level value="WARN" />
	</logger>
	<!-- Request logging -->
	<logger name="org.otherobjects.cms.controllers.SiteController">
		<level value="INFO" />
	</logger>
	<logger name="org.otherobjects.cms.servlet.StaticResourceServlet">
		<level value="INFO" />
	</logger>
	<!-- Show JSON output -->
	<logger name="org.otherobjects.cms.views.JsonView">
		<level value="DEBUG" />
	</logger>
</configuration>
