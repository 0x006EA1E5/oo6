<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-2.5.xsd 
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="ooAdminPassword" class="java.lang.String">
		<constructor-arg index="0" value="${otherobjects.default.admin.password}" />
	</bean>
	
	<bean id="ooAdminUserCreator" class="org.otherobjects.cms.bootstrap.OtherObjectsAdminUserCreator">
		<property name="userDao" ref="userDao"></property>
		<property name="roleDao" ref="roleDao"></property>
		<property name="passwordEncoder" ref="passwordEncoder"></property>
		<property name="saltSource" ref="saltSource"></property>
		<property name="defaultAdminPassword" >
			<bean factory-bean="ooAdminPassword" factory-method="toCharArray" />
		</property>
	</bean>
	
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="userDao" class="org.otherobjects.cms.dao.UserDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <bean id="roleDao" class="org.otherobjects.cms.dao.RoleDaoHibernate">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    
    <bean id="passwordEncoder" class="org.springframework.security.providers.encoding.MessageDigestPasswordEncoder">
    	<constructor-arg value="SHA-256" />
    </bean>
	
	<bean id="saltSource" class="org.springframework.security.providers.dao.salt.SystemWideSaltSource">
		<property name="systemWideSalt" value="1234567890" />
	</bean>
</beans>